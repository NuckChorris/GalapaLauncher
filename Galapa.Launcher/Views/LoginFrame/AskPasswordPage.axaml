<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Galapa.Launcher.ViewModels.LoginFrame"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:AskPasswordPageViewModel"
             x:Class="Galapa.Launcher.Views.LoginFrame.AskPasswordPage">
    <StackPanel Orientation="Vertical">
        <TextBox Text="{Binding Username, Mode=OneWay}" IsEnabled="False" />
        <TextBox Text="{Binding Password, Mode=TwoWay}" PasswordChar="●" />
        <CheckBox Content="Save password" IsChecked="{Binding FlowState.SavePassword, Mode=TwoWay}" />
        <Button Content="Login" Command="{Binding LoginCommand}" />
    </StackPanel>
</UserControl>