<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Galapa.Launcher.ViewModels.SettingsFrame"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Galapa.Launcher.Views.SettingsFrame.SettingsFrame"
             x:DataType="vm:SettingsFrameViewModel">

    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
        <!-- Settings Navigation Tab Bar -->
        <TabStrip HorizontalAlignment="Center"
                  ItemsSource="{Binding Pages}"
                  SelectedItem="{Binding SelectedPage}"
                  SelectedIndex="0">
            <TabStrip.ItemTemplate>
                <DataTemplate x:DataType="vm:SettingsFrameTab">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Svg Path="{Binding Icon}" Width="20" Height="20" />
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </TabStrip.ItemTemplate>
        </TabStrip>

        <!-- Settings Content Area -->
        <TransitioningContentControl Grid.Row="1"
                                     Content="{Binding SelectedPage.ViewModel.Value}">
            <TransitioningContentControl.PageTransition>
                <CrossFade Duration="0:00:00.200" />
            </TransitioningContentControl.PageTransition>
        </TransitioningContentControl>
    </Grid>
</UserControl>