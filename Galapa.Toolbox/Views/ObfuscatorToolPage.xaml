<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Galapa.Toolbox.Views.ObfuscatorToolPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galapa.Toolbox.Views"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls">
    <Grid Padding="20">
        <StackPanel Spacing="16">
            <TextBlock Text="Obfuscator/Deobfuscator Tool" FontSize="24" Margin="0,0,0,16"/>
            <Button Content="Select File" Click="OnSelectFileClick"/>
            <TextBlock x:Name="SelectedFileText" Text="No file selected."/>
            <ComboBox x:Name="ObfuscatorCombo" SelectedIndex="0" SelectionChanged="ObfuscatorCombo_SelectionChanged">
                <ComboBoxItem Content="XorObfuscator" />
                <ComboBoxItem Content="UsernameObfuscator" />
            </ComboBox>
            <TextBox x:Name="ParameterBox" Header="Bytes (comma-separated)"/>
            <StackPanel Orientation="Horizontal" Spacing="16">
                <RadioButton x:Name="ObfuscateRadio" Content="Obfuscate" IsChecked="True"/>
                <RadioButton x:Name="DeobfuscateRadio" Content="Deobfuscate"/>
            </StackPanel>
            <Button Content="Run" Click="OnRunClick"/>
        </StackPanel>
    </Grid>
</Page>